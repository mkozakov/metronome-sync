<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="orangutap.com.metronomesync.MainActivity.MainFragment"
    android:background="#35C6C1"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/abc_action_bar_default_height_material">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bpm_value"
                android:text="@string/bpm_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="normal"
                android:textSize="@dimen/abc_text_size_display_4_material"/>

            <TextView android:text="@string/bpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_display_2_material" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/bpm_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/tap_tempo_btn"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:text="@string/tap_tempo"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:background="#70D8D7"
            android:clickable="true" />

        <Button
            android:id="@+id/play_stop_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_stop"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="#70D8D7"
            android:clickable="true" />


    </LinearLayout>
</RelativeLayout>
